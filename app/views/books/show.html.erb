<% if @user == current_user %>
    <h2>User info</h2>
    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    <p><%= link_to "edit", edit_user_path(@user.id) %></p>
<% else %>
    <h2>User info</h2>
    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    <p><%= link_to "edit", user_path(current_user.id) %></p>
<% end %>

<h1>本の投稿フォーム</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>ショップ名</h4>
      <%= f.text_field :title %>
    <h4>説明</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>

<h2>Book detail</h2>
      <table>
        <t.head>
          <tr>
            <th></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </t.head>

        <t.body>
          <tr>
            <td><span><%= image_tag 'no_image.jpg' %></span></td>
            <td><span><%= @book.title %></span></td>
            <td><span><%= @book.body %></span></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "edit" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>  "Are you sure？", class: "delete" %></td>
          </tr>
          <td><span><%= @user.name %></span></td>
        </t.body>


      </table>