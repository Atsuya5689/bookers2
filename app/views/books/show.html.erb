<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <p><%= @user.name %></p>
      <p><%= @user.introduction %></p>
      <div class='row'>
        <%= link_to edit_user_path(@user.id) do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <div class="form-group">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table>
          <t.head>
            <tr>
              <th></th>
              <th><strong>Title</strong></th>
              <th><strong>Opinion</strong></th>
            </tr>
          </t.head>

          <t.body>
            <tr>
              <td><span><%= image_tag @book.user.get_profile_image %></span></td>
              <td><span><%= @book.title %></span></td>
              <td><span><%= @book.body %></span></td>
              <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "edit" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>  "Are you sureï¼Ÿ", class: "delete" %></td>
              <% end %>
            </tr>
            <td><span><%= link_to @user.name, user_path(@user.id) %></span></td>
          </t.body>
        </table>
    </div>
  </div>
</div>