<% if @book.errors.any? %>
  <%= @book.errors.count %>件の error が発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
    <label for="inputTitle">Title</label><br/>
    <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%><br/>
    <label for="inputBody">Opinion</label><br/>
    <%= f.text_field :body, placeholder:"body" %><br/>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %>