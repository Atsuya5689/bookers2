<h2>Book編集</h2>
<%= form_with model: @book do |f| %>
    <label for="inputTitle">Title</label><br/>
    <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%><br/>
    <label for="inputBody">Body</label><br/>
    <%= f.text_field :body, placeholder:"body" %><br/>
  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to 'show', book_path(@book.id) %> | <%= link_to 'back', '/books' %>