<h2>プロフィール編集</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件の error が発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
    <label for="inputName">Name</label><br/>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br/>
    <label for="inputProfileImage">ProfileImage</label><br/>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br/>
    <label for="inputIntroduction">Introduction</label><br/>
    <%= f.text_field :introduction, placeholder:"introduction" %><br/>
  <%= f.submit "Update User" %>
<% end %>