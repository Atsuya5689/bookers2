<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <p><%= @user.name %></p>
      <p><%= @user.introduction %></p>
      <div class='row'>
        <%= link_to edit_user_path(@user.id), {class: "btn btn-primary btn-block"} do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

     <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', {class: "btn btn-success"} %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
          <table>
            <t.head>
              <tr>
                <th></th>
                <th><strong>Title</strong></th>
                <th><strong>Opinion</strong></th>
              </tr>
            </t.head>

            <% @books.each do |book| %>
            <t.body>
              <tr>
                <td><span>
                  <%= link_to user_path(@user.id) do %>
                    <%= image_tag @user.get_profile_image %>
                  <% end %>
                </span></td>
                <td><span><%= link_to book.title, book_path(book.id) %></span></td>
                <td><span><%= book.body %></span></td>

                <td><span><% if book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(book), method: :delete do %>
                      <i class="fas fa-heart text-danger"></i><%= book.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to book_favorites_path(book), method: :post do %>
                      <i class="fas fa-heart"></i><%= book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>

                <td><span><p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p></span></td>

                </span></td>
              </tr>
            </t.body>
            <% end %>

          </table>
    </div>
  </div>
</div>