    <h2>User info</h2>
    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    <p><%= link_to "edit", edit_user_path(@user.id) %></p>

 <h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>ショップ名</h4>
      <%= f.text_field :title %>
    <h4>説明</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>


  <h2>Books</h2>
      <table>
        <t.head>
          <tr>
            <th></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </t.head>
        <% @books.each do |book| %>

        <t.body>
          <tr>
            <td><span>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image %>
              <% end %>
            </span></td>
            <td><span><%= link_to book.title, book_path(book.id) %></span></td>
            <td><span><%= book.body %></span></td>
          </tr>
        </t.body>

        <% end %>
      </table>
