<% if @user == current_user %>
    <h2>User info</h2>
    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    <p><%= link_to "edit", edit_user_path(@user.id) %></p>
<% else %>
    <h2>User info</h2>
    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    <p><%= link_to "edit", user_path(current_user.id) %></p>
<% end %>

 <h1>本の投稿フォーム</h1>
  <%= form_with model: Book.new, url:'books_path' do |f| %>
    <h4>ショップ名</h4>
      <%= f.text_field :title %>
    <h4>説明</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>


  <h2>Books</h2>
      <table>
        <t.head>
          <tr>
            <th></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </t.head>
        <% @books.each do |book| %>

        <t.body>
          <tr>
            <td><span><%= image_tag book.user.get_image %></span></td>
            <td><span><%= link_to book.title, book_path(book.id) %></span></td>
            <td><span><%= book.body %></span></td>
          </tr>
        </t.body>

        <% end %>
      </table>
